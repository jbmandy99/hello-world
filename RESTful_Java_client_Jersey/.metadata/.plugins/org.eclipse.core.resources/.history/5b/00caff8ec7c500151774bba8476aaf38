proposalApp.service('performanceSummaryService', ['$http', function ($http) {
	var serviceUri = "http://localhost:8080/RESTfulExample/rest/metallica/";

    this.getCustomer = function (id) {
        return $http.post(serviceUri + '/' + id);
    };
 }]);






